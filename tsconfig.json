{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2021",
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "composite": true,
    "strict": true
  },
  "include": ["src", "src/*.json"],
  "exclude": ["dist", "node_modules"]
}
